<br><br><br>
<%= link_to 'Back to my list', current_user, class: "btn btn-default" %>
<%= link_to "Discover", discover_path, class: "btn btn-primary" %> <br> <br>


<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<div class="similar">	
			<div class="panel panel-default">
				<div class="panel-heading center">
					<%= image_tag @pin.image.url(:medium) if @pin.image? %>
						<div class="panel-body left", style="font-size: 17px; padding-bottom: 0px"> 
			 		<p><%= @pin.description %>
			 			</div>
			 			<div class="center">
								<% if @pin.user == current_user %> 
								<%= link_to 'kick', edit_pin_path(@pin)%> |
								<% end %>  

								<% if @pin.user == current_user %> 
								<%= link_to 'edit', edit_pin_path(@pin)%> 
								<% end %> 

								<!-- 
								<% if @pin.user == current_user %>
								<%= link_to 'delete', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
								<% end %> <br> <br> -->
							</div>
				</div>
		 		<div class="panel-body left", style="font-size: 12px"> 
		 			<%=link_to (image_tag @pin.user.image.url(:thumb)), @pin.user if @pin.user %>
			  	<p><strong><%=link_to (@pin.user.name), @pin.user if @pin.user %></strong></p>
				</div>
					</div>
			</div>
	</div>
</div>

<div class="center">
	<%= link_to "Add to your list", new_pin_path, class: "btn btn-success" %>
</div>

<div class="center">
<br> <br> <h4><font color="gray"> people who listed something similar </h4></font>
</div> 

<div class="row">
 <div class="col-md-offset-2 col-md-8">
		<div class="similar">
			<% @pins.each do |pin| %>
		    <div class="box panel panel-primary">
		      <div class="panel-body">
		            <div class= "media">
		              <div class="media-left">
		                <%=link_to (image_tag pin.user.image.url(:medium)), pin.user if pin.user %>
		                <strong><%= pin.user.name if pin.user %></strong>
		              </div> 
		                <div class="media-body media-middle", style="padding-left: 10px; font-size: 17px">
		                <%= link_to pin.description, pin %>
		                  <!-- <% if pin.user == current_user%>
		                  <div class="actions">
		                    <%= link_to 'kick', edit_pin_path(pin)%> 
		                  </div>
		                <% end %> -->
		                </div>
		            </div>
		      </div>
		    </div>  
		  <% end %>
		</div>
</div>
</div>



