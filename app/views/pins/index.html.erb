<%= render 'pages/home' unless user_signed_in? %>


<% if user_signed_in? %>

    <div class="center">
        <font color="white"><h2> Discover</h2>
        <p> Discover what others have listed. Re-list the things you want to do! 
          <p><h3>#KickTheList</h3></font><p>
        <%= link_to "Add to the list", new_pin_path, class: "btn btn-success" %> <br><br>
    </div>

    <div class="center">
          <div style="
            margin-left: auto;
            width: 50%;
            margin-right: auto;">
                <%= link_to '+add more', new_pin_path, class: "btn btn-success btn-lg", style: "
                         padding-bottom: 0px;
                         padding-top: 0px;
                         margin-bottom: 10px;
                         " %> &nbsp;&nbsp; <p>
                <div class="fb-share-button" data-href="#{request.protocol}#{request.host_with_port}#{request.fullpath}" data-layout="button" data-mobile-iframe="true" style="bottom: 5px;"> 
                </div>   &nbsp;&nbsp;
                 <a class="twitter-share-button"
                href="https://twitter.com/intent/tweet?text=Just%20accepted%20the%20Kickthelist%20challenge.%20Check%20out%20my%20list:">
                Tweet</a>
          </div> 
        
<div class="row">
  <div class="col-md-offset-2 col-md-8">
<div id="pins-center" class="left">

      <% @pins.each do |pin| %>
        <div class="panel panel-primary"> <!-- changed from box panel and added row class atop -->
          <div class="panel-body">
                <div class= "media">
                  <div class="media-left">
                    <%=link_to (image_tag pin.user.image.url(:medium)), pin.user if pin.user %> <br>
                    <strong><%= pin.user.name if pin.user %></strong>
                  </div> 
                    <div class="media-body media-middle", style="padding-left: 15px; font-size: 17px">
                      <%= link_to pin.description, pin, :"data-no-turbolink" => true %>
                      <!-- <% if pin.user == current_user%>
                      <div class="actions">
                        <%= link_to 'kick', edit_pin_path(pin)%> 
                      </div>
                    <% end %> -->
                    </div>
                </div>
          </div>
        </div>  
      <% end %>
</div> 
</div>
</div>
<% else %>
<%end%>

<div class="center">
   <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>
